    <insert id="add" parameterType="com.okdeer.mall.risk.entity.RiskTriggerRecord" >
        insert into risk_trigger_record
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                id,
            </if>
            <if test="loginName != null" >
                login_name,
            </if>
            <if test="deviceId != null" >
                device_id,
            </if>
            <if test="payAccount != null" >
                pay_account,
            </if>
            <if test="payAccountType != null" >
                pay_account_type,
            </if>
            <if test="triggerType != null" >
                trigger_type,
            </if>
            <if test="triggerWay != null" >
                trigger_way,
            </if>
            <if test="createTime != null" >
                create_time,
            </if>
            <if test="tel != null" >
                tel,
            </if>
            <if test="facePrice != null" >
                face_price,
            </if>
            <if test="isPreferential != null" >
                is_preferential,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="loginName != null" >
                #{loginName,jdbcType=VARCHAR},
            </if>
            <if test="deviceId != null" >
                #{deviceId,jdbcType=VARCHAR},
