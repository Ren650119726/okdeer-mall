<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.okdeer.mall.chargesetting.mapper.RiskWhiteMapper" >
    <resultMap id="BaseResultMap" type="com.okdeer.mall.chargesetting.entity.RiskWhite" >
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="telephone_account" property="telephoneAccount" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="create_user_id" property="createUserId" jdbcType="VARCHAR" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="update_user_id" property="updateUserId" jdbcType="VARCHAR" />
        <result column="disabled" property="disabled" jdbcType="TINYINT" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, telephone_account, create_time, create_user_id, update_time, update_user_id, 
        disabled
    </sql>
   <!-- 根据条件搜索皮肤列表 -->
  <select id="findWhiteList" resultMap="BaseResultMap" parameterType="com.okdeer.mall.chargesetting.dto.WhiteManagerDto">
    SELECT 
    <include refid="Base_Column_List" />
     FROM risk_white 
     WHERE 1=1
       <!-- 未被删除的 -->
       AND disabled = 0
       <!-- 活动名称 -->
       <if test="telephoneAccount != null and telephoneAccount != ''">
         AND telephone_account LIKE CONCAT('%',#{telephoneAccount,jdbcType=VARCHAR},'%') 
       </if>
       <!-- 创建时间 -->
       <if test="createTimeStart != null">
         AND create_time <![CDATA[ >= ]]> #{createTimeStart,jdbcType=TIMESTAMP}
       </if>
       <if test="createTimeEnd != null">
         AND create_time <![CDATA[ <= ]]> #{createTimeEnd,jdbcType=TIMESTAMP}
       </if>
       ORDER BY create_time DESC
  </select>
  <select id="selectWhiteByAccount" resultType="int" parameterType="java.lang.String" >
        select count(1)  
          from risk_white
        where telephone_account = #{telephoneAccount,jdbcType=VARCHAR}
  </select>
  <!-- 自动工具生成 -->
    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.String" >
        select 
        <include refid="Base_Column_List" />
        from risk_white
        where id = #{id,jdbcType=VARCHAR}
    </select>

    <insert id="add" parameterType="com.okdeer.mall.chargesetting.entity.RiskWhite" >
        insert into risk_white
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                id,
            </if>
            <if test="telephone_account != null" >
                telephone_account,
            </if>
            <if test="create_time != null" >
                create_time,
            </if>
            <if test="create_user_id != null" >
                create_user_id,
            </if>
            <if test="update_time != null" >
                update_time,
            </if>
            <if test="update_user_id != null" >
                update_user_id,
            </if>
            <if test="disabled != null" >
                disabled,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="telephone_account != null" >
                #{telephone_account,jdbcType=VARCHAR},
            </if>
            <if test="create_time != null" >
                #{create_time,jdbcType=TIMESTAMP},
            </if>
            <if test="create_user_id != null" >
                #{create_user_id,jdbcType=VARCHAR},
            </if>
            <if test="update_time != null" >
                #{update_time,jdbcType=TIMESTAMP},
            </if>
            <if test="update_user_id != null" >
                #{update_user_id,jdbcType=VARCHAR},
            </if>
            <if test="disabled != null" >
                #{disabled,jdbcType=TINYINT},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.okdeer.mall.chargesetting.entity.RiskWhite" >
        update risk_white
        <set >
            <if test="telephone_account != null" >
                telephone_account = #{telephone_account,jdbcType=VARCHAR},
            </if>
            <if test="create_time != null" >
                create_time = #{create_time,jdbcType=TIMESTAMP},
            </if>
            <if test="create_user_id != null" >
                create_user_id = #{create_user_id,jdbcType=VARCHAR},
            </if>
            <if test="update_time != null" >
                update_time = #{update_time,jdbcType=TIMESTAMP},
            </if>
            <if test="update_user_id != null" >
                update_user_id = #{update_user_id,jdbcType=VARCHAR},
            </if>
            <if test="disabled != null" >
                disabled = #{disabled,jdbcType=TINYINT},
            </if>
        </set>
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <delete id="delete" parameterType="java.lang.String" >
        update risk_white set disabled =1 
        where id = #{id,jdbcType=VARCHAR}
    </delete>

</mapper>